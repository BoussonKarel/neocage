<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeoCage.Views.GameInfo" NavigationPage.HasNavigationBar="False" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Label TextColor="#3a3a3a" HorizontalOptions="Center" Margin="0,20,0,0" FontFamily="Segoe UI" Font="Bold,55" Text="Double Trouble"></Label>

            <Grid RowSpacing="20" Margin="10" HeightRequest="200" BackgroundColor="green">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Label Text="Spelregels"></Label>
            </Grid>

            <Grid RowSpacing="20" Margin="10" HeightRequest="200" BackgroundColor="red">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Label Text="Scorebord"></Label>
            </Grid>

            <Button ></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>